<!-- Add New container_train Form -->
<div style="background-color: #f8f9fa; padding: 15px; margin: 15px 0; border-radius: 5px;">
  <h3>Add New ContainersTrains connection</h3>
  <form action="/containers_trains/add" method="POST" style="display: flex; gap: 10px; align-items: end;">
    <div>
      <label>Container ID:<br>
        <input type="number" name="container_id" required style="padding: 5px;">
      </label>
    </div>
    <div>
      <label>Train ID:<br>
        <input type="number" name="train_id" required style="padding: 5px;">
      </label>
    </div>
    <button type="submit" style="padding: 5px 15px; background-color: #28a745; color: white; border: none; border-radius: 3px;">Add Containers_Trains Connection</button>
  </form>
</div>

<table border="1" style="border-collapse: collapse; width: 100%;">
  <thead>
    <tr style="background-color: #f2f2f2;">
      <th style="padding: 8px;">Container ID</th>
      <th style="padding: 8px;">Train ID</th>
    </tr>
  </thead>
  <tbody>
    {{#each containers_trains}}
    <tr>
      <td style="padding: 8px;">{{this.container_id}}</td>
      <td style="padding: 8px;">{{this.train_id}}</td>

        

      <td style="padding: 8px;">
          <button type="submit" style="padding: 3px 8px; background-color: #007bff; color: white; border: none; border-radius: 3px; margin-right: 5px;">Update</button>
        </form>
        <form action="/containers_trains/delete/{{this.container_id}}/{{this.train_id}}" method="POST" style="display: inline;">
          <button type="submit" onclick="return confirm('Delete this container-train? This will also remove any container assignments.');" style="padding: 3px 8px; background-color: #dc3545; color: white; border: none; border-radius: 3px;">Delete</button>
        </form>
      </td>
    </tr>
    {{else}}
    <tr>
      <td colspan="4" style="padding: 8px; text-align: center; font-style: italic;">No container-train relationships found. Use RESET to restore sample data.</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<p style="margin-top: 20px;"><em>Note: You can now add, edit, and delete container-train relationships directly from this page!</em></p>
